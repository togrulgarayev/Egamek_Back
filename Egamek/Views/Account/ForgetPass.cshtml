@model ForgetPassViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EGAMEK</title>

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">

</head>
<body>

    <header>
        <nav class="only-nav navbar navbar-expand-lg navbar-light">
            <a class="only-nav-logo navbar-brand" asp-controller="Home" asp-action="Index">
                <img class="nav-logo" src="~/assets/img/Logo.svg" alt="EGAMEK Logo">
            </a>
        </nav>
    </header>


    <main>
        <section id="login">

            <div class="container cntr">
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="signup" method="post">
                    <div class="header">
                        <h3>Forgot password</h3>
                    </div>
                    <div class="inputs forgets">
                        <input autocomplete="off" asp-for="Email" placeholder="E-mail" autofocus />
                        <button type="submit" id="submit">Forgot password</button>
                    </div>
                </form>
                <p>
            </div>
        </section>
    </main>



    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>
</html>