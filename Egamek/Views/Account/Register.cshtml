@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EGAMEK Register</title>

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">

</head>
<body>

    <header>
        <nav class="only-nav navbar navbar-expand-lg navbar-light">
            <a class="only-nav-logo navbar-brand" asp-controller="Home" asp-action="Index">
                <img class="nav-logo" src="~/assets/img/Logo.svg" alt="EGAMEK Logo">
            </a>
        </nav>
    </header>


    <main>
        <section id="register">
            <div class="container">
                
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form id="signup" method="post">
                    <div class="header">
                        <h3>Create an account</h3>
                    </div>
                    <div class="inputs">
                        <input autocomplete="off" asp-for="Name" placeholder="Name" autofocus/>
                        <span class="text-danger" asp-validation-for="Name"></span>
                        <input autocomplete="off" asp-for="Surname" placeholder="Surname" autofocus/>
                        <span class="text-danger" asp-validation-for="Surname"></span>
                        <input autocomplete="off" asp-for="Email" placeholder="E-mail" autofocus/>
                        <span class="text-danger" asp-validation-for="Email"></span>
                        <input autocomplete="off" asp-for="Password" placeholder="Password"/>
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <input autocomplete="off" asp-for="PasswordConfirm" placeholder="Password Confirm"/>
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                        <button asp-controller="Account" asp-action="Register" type="submit" id="submit">Register</button>
                    </div>
                    <div class="line">
                        <div class="left">
                            <hr>
                        </div>
                        <div class="or">
                            <h5> OR</h5>
                        </div>
                        <div class="right">
                            <hr>
                        </div>
                    </div>
                    <a asp-controller="Account" asp-action="GoogleLogin" id="google" class="btn">
                        <img src="~/assets/img/google.svg" alt="">
                        SIGN UP WITH GOOGLE
                    </a>
                    <a asp-controller="Account" asp-action="FacebookLogin" id="fb" class="btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                            <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                        </svg>
                        SIGN UP WITH FACEBOOK
                    </a>

                </form>
                <p>
                    Already have an account?<a asp-controller="Account" asp-action="Login"> Log In</a>
                </p>
            </div>
        </section>
    </main>



    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>
</html>