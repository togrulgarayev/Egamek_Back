    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#">
                <img class="nav-logo" src="~/assets/img/Logo.svg" alt="EGAMEK Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @ViewData["GamesActive"]">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Games</a>
                    </li>
                    <li class="nav-item @ViewData["AboutActive"]">
                        <a class="nav-link" asp-controller="AboutUs" asp-action="Index">About Us</a>
                    </li>
                    <li class="nav-item @ViewData["FindActive"]">
                        <a class="nav-link" asp-controller="FindGame" asp-action="Index">Find A Game</a>
                    </li>
                </ul>

                


                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @User.Identity.Name
                        @*AD SOYAD CIXACAQ BURA*@
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                        @if (User.IsInRole("Admin"))
                        {
                            <a style="cursor: pointer" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="dropdown-item my-login-btn text-center">
                                <i class="fas fa-user"></i>
                                <p style="display: inline-block; margin-left: 2px">Admin Panel</p>
                            </a>
                        }

                        @if (User.IsInRole("User"))
                        {
                            <a style="cursor: pointer" asp-controller="Account" asp-action="UserPage" class="dropdown-item my-login-btn text-center">
                                <i class="fas fa-user"></i>
                                <p style="display: inline-block; margin-left: 2px">Hesabım</p>
                            </a>
                        }



                        <a style="cursor: pointer" asp-controller="Account" asp-action="Logout" asp-route-ReturnUrl="@Context.Request.Path.Value" class="dropdown-item my-login-btn text-center">
                            <i class="bi bi-box-arrow-left"></i>
                            <p style="display: inline-block; margin-left: 2px">Logout</p>
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Path.Value" class="nav-sign">
